<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_app"
    android:theme="@style/CustomTheme"
    tools:context=".documento_emitido">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="16dp"
        android:background="@color/primary_app"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            tools:ignore="MissingConstraints"
            android:background="@color/primary_app"
            >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/doc_digtal"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:text="Documento de Combustible Emitido"
            />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Numero de documento:"
                    android:textColor="@color/white"

                    />

                <TextView
                    android:id="@+id/txtcorrelativo_doc_emitido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/text1"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="-50dp"
                    android:text="No."
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txtmatricula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text1"
                    android:textColor="@color/white"
                    android:text="Matricula"/>
                <TextView
                    android:id="@+id/txtsucursal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text1"
                    android:layout_alignLeft ="@+id/txtcorrelativo_doc_emitido"
                    android:textColor="@color/white"
                    android:text="sucursal"
                    />
                <TextView
                    android:id="@+id/txttmovimiento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtsucursal"
                    android:text="Movimiento:"
                    android:textColor="@color/white"
                    android:layout_alignLeft="@id/txtmatricula"/>
                <TextView
                    android:id="@+id/txtnovale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Vales"
                    android:textColor="@color/white"
                    android:layout_below="@id/txtsucursal"
                    android:layout_alignLeft="@+id/txtsucursal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtfecha"
                    android:layout_below="@id/txttmovimiento"
                    android:text="Fecha: "
                    android:textColor="@color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtcreado"
                    android:textColor="@color/white"
                    android:layout_below="@id/txtnovale"
                    android:layout_alignLeft="@+id/txtsucursal"
                    android:text="Creado"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtpiloto"
                    android:text="Piloto"
                    android:textColor="@color/white"
                    android:layout_below="@id/txtcreado"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtcantida"
                    android:layout_below="@id/txtpiloto"
                    android:textColor="@color/white"
                    android:text="cantidad"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtvalor"
                    android:layout_below="@id/txtpiloto"
                    android:layout_alignLeft="@id/txtsucursal"
                    android:textColor="@color/white"
                    android:text="Valor"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Total"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:id="@+id/txttotal"
                    android:layout_below="@id/txtcantida"
                    />
                <TextView
                    android:id="@+id/txtfacturado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txttotal"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="Facturado"
                    android:textSize="25dp"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtestado"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/txtfacturado"
                    android:textColor="@color/rojo"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:text="estado"/>
                <LinearLayout
                    android:id="@+id/imprimir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/txtestado"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnimprimir"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bordes_botones"
                        android:text="Imprimir Doc."
                        android:textColor="@color/white" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/imprimir"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/cerrar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="left"
                        android:textColor="@color/white"
                        android:text="Cerrar"
                        android:backgroundTint="@color/colorazul"
                        />

                    <Button
                        android:id="@+id/reenviar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cerrar"
                        android:layout_alignLeft="@id/cerrar"
                        android:layout_gravity="right"
                        android:backgroundTint="@color/Rojo_advertencia"
                        android:text="Reenviar"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white" />
                </LinearLayout>

            </RelativeLayout>
        </com.google.android.material.appbar.AppBarLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>